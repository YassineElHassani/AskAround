{
  "info": {
    "name": "AskAround API",
    "description": "Complete API collection for AskAround - Location-based Q&A Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                  "    console.log(\"Access token saved:\", jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                  "    console.log(\"Access token saved:\", jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Logout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.collectionVariables.set(\"access_token\", \"\");",
                  "console.log(\"Access token cleared\");"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Questions",
      "item": [
        {
          "name": "Create Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Best coffee shop nearby?\",\n  \"content\": \"I'm new to the area and looking for a good coffee shop\",\n  \"longitude\": -73.935242,\n  \"latitude\": 40.730610\n}"
            },
            "url": {
              "raw": "{{base_url}}/questions",
              "host": ["{{base_url}}"],
              "path": ["questions"]
            }
          }
        },
        {
          "name": "Get Nearby Questions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/questions?longitude=-73.935242&latitude=40.730610&maxDistance=10000&limit=50",
              "host": ["{{base_url}}"],
              "path": ["questions"],
              "query": [
                {
                  "key": "longitude",
                  "value": "-73.935242"
                },
                {
                  "key": "latitude",
                  "value": "40.730610"
                },
                {
                  "key": "maxDistance",
                  "value": "10000"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Get Question by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/questions/{{question_id}}",
              "host": ["{{base_url}}"],
              "path": ["questions", "{{question_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Answers",
      "item": [
        {
          "name": "Create Answer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"I recommend Blue Bottle Coffee on 5th Avenue\",\n  \"questionId\": \"{{question_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/answers",
              "host": ["{{base_url}}"],
              "path": ["answers"]
            }
          }
        },
        {
          "name": "Get Answers for Question",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/answers/question/{{question_id}}",
              "host": ["{{base_url}}"],
              "path": ["answers", "question", "{{question_id}}"]
            }
          }
        },
        {
          "name": "Get Answer by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/answers/{{answer_id}}",
              "host": ["{{base_url}}"],
              "path": ["answers", "{{answer_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Favorites",
      "item": [
        {
          "name": "Add to Favorites",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/favorites/{{question_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "favorites", "{{question_id}}"]
            }
          }
        },
        {
          "name": "Remove from Favorites",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/favorites/{{question_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "favorites", "{{question_id}}"]
            }
          }
        },
        {
          "name": "Get Favorites",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/favorites",
              "host": ["{{base_url}}"],
              "path": ["users", "favorites"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "question_id",
      "value": ""
    },
    {
      "key": "answer_id",
      "value": ""
    }
  ]
}
